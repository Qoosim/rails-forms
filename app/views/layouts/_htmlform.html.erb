<% obj = @user %>
<div class="container">
  <% if obj.errors.any? %>
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <div class="card border-danger mb-3">
        <div class="card-header text-white bg-danger">
          <h5 class="card-title center my-0 text-danger">
            <%= pluralize(obj.errors.count, "error") %> prohibited this user
            from being saved:
          </h5>
        </div>
        <div class="card-body text-danger">
          <ul>
            <% obj.errors.full_messages.each do |msg| %>
            <li>
              <%= msg %>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>

<form action="/users" method="post" accept-charset="UTF-8">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>"
  />
  <label for="user_name"> Username: </label>
  <input type="text" name="user[username]" id="user_username" />
  <label for="user_email"> Email: </label>
  <input id="user_email" type="text" name="user[email]" />
  <label for="user_password">Password:</label>
  <input id="user_password" type="text" name="user[password]" />
  <br />
  <br />
  <input id="submit" type="submit" name="commit" value="Sign up" />
</form>
