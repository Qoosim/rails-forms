<%= form_for @user do |for_form| %>
  <%= for_form.label :username, 'Username' %>
  <%= for_form.text_field :username, placeholder: "Enter your username"%>
  <%= for_form.label :password, 'Password' %>
  <%= for_form.password_field :password, placeholder: "Choose a Password"%>
  <%= for_form.label :email,'Email' %>
  <%= for_form.email_field :email, placeholder: "Enter your Email address"%>
  <%= for_form.submit 'Signup' %>
<% end %>
